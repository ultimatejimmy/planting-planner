@import url('https://fonts.googleapis.com/css?family=Neucha');
	
systemFont = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

#app, input, button
	font-family 'Neucha', systemFont

#app
	width 100%
	font-size 1.3em

.hidden
	display none

#search
	font-size 26px
	float left
	margin 10px 30px 20px 20px
	max-width 99%
	padding 10px

#key
	float left
	width 270px
	margin 10px 20px

#input
	width 625px
	max-width 99%
	padding 0 20px
	margin auto auto 15px
	label, #frostDate
		font-size 35px
	button
		font-size 36px

.startIndoors
	background-color #53b33b !important

.startOutdoors
	background-color #26b5c0 !important

table 
	width 100%
	min-width 300px
	overflow auto
	border 0
	border-collapse collapse
	td.schedule
		min-width 150px
	th, td
		padding 0.5em 1em

thead 
	td
		background-color black !important
		color white
	td.date
		padding-left 0

.pure-table-striped tr:nth-child(2n-1) td
	background-color #f2f2f2