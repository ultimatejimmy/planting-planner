@import url('https://fonts.googleapis.com/css?family=Neucha');
	
systemFont = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

#app, input, button
	font-family 'Neucha', systemFont

h1
	margin-top 0 // only because of home link
h1, p
	text-align center

p
	margin-left 20px
	margin-right 20px
	&#locationInfo
		text-align left
	&#or
		font-size 36px
		margin 5px 0 

.left
	text-align left
	margin-left 20px
	margin-top 10px	
	display block
		

input, button
	max-width 90%
	&[type="checkbox"]
		width 20px
		height 20px

button
	display:inline-block;
	padding:0.2em .6em;
	margin 0.3em 0.3em 0 0
	border-radius:0.15em;
	box-sizing: border-box;
	box-shadow:inset 0 -0.5em 0 -0.37em rgba(0,0,0,0.17);
	text-align:center;
	position:relative;
	&:active
		top:0.1em;

#editList, #saveList
	font-size 22px
	width 140px
	text-align left 

#app
	width 100%
	font-size 1.3em

.hidden
	display none

#search
	font-size 22px
	float left
	margin 10px 30px 20px 20px
	max-width 99%
	padding 10px

#key
	float left
	width 250px
	max-width 99%
	margin 10px 20px

#input
	width 680px
	max-width 99%
	padding 0 20px
	margin auto auto 15px
	label, #frostDate
		font-size 35px
	button
		font-size 36px

.startIndoors
	background-color #53b33b !important

.startIndoors:first-of-type, :not(.startIndoors) + .startIndoors
	&::after
		content "üè°"

.startOutdoors
	background-color #26b5c0 !important

.startOutdoors:first-of-type, :not(.startOutdoors) + .startOutdoors
	&::after
		content "üå§Ô∏è"

table 
	width 100%
	min-width 300px
	overflow auto
	border 0
	border-collapse collapse
	td.schedule
		min-width 150px
	th, td
		padding 0.5em 1em 
		&.filterCB.hide
			display none

.hide 
	display none


@media (max-width 600px)
	.date
		display	none
	html 
		overflow-x hidden

thead 
	td
		background-color black !important
		color white
	td.date
		padding-left 0

.pure-table-striped tr:nth-child(2n-1) td
	background-color #f2f2f2


div.sticky
	top 0
	position sticky
	width 100%
	height 75px
	background-color white
	div
		display inline
		
thead.sticky
	top 75px
	position sticky
	
@media (max-width 645px) and (min-height 400px)
	div.sticky
		height 150px
	thead.sticky
		top 150px
@media (max-height 450px)
	div.sticky
		position static
	thead.sticky
		top 0