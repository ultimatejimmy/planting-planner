@import url('https://fonts.googleapis.com/css?family=Neucha');
	
systemFont = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

#app, input, button
	font-family 'Neucha', systemFont

h1
	margin-top 0 // only because of home link
h1, p
	text-align center

.left
	text-align left
	margin-left 20px
	margin-top 10px	
	display block
		

input, button
	max-width 90%

button
	display:inline-block;
	padding:0.2em .6em;
	margin 0.3em 0.3em 0 0
	border-radius:0.15em;
	box-sizing: border-box;
	box-shadow:inset 0 -0.5em 0 -0.37em rgba(0,0,0,0.17);
	text-align:center;
	position:relative;
	&:active
		top:0.1em;

#app
	width 100%
	font-size 1.3em

.hidden
	display none

#search
	font-size 26px
	float left
	margin 10px 30px 20px 20px
	max-width 99%
	padding 10px

#key
	float left
	width 300px
	max-width 99%
	margin 10px 20px

#input
	width 660px
	max-width 99%
	padding 0 20px
	margin auto auto 15px
	label, #frostDate
		font-size 35px
	button
		font-size 36px

.startIndoors
	background-color #53b33b !important

.startOutdoors
	background-color #26b5c0 !important

table 
	width 100%
	min-width 300px
	overflow auto
	border 0
	border-collapse collapse
	td.schedule
		min-width 150px
	th, td
		padding 0.5em 1em 



@media (max-width 600px)
	.date
		display	none
	html, body, #app 
		overflow-x hidden

thead 
	td
		background-color black !important
		color white
	td.date
		padding-left 0

.pure-table-striped tr:nth-child(2n-1) td
	background-color #f2f2f2
